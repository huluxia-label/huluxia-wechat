/* global import in @colorUI */
@import './colorui/main.wxss';
@import './colorui/icon.wxss';
@import './colorui/animation.wxss';

.content-wrap {
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  padding: 140rpx 0;
  box-sizing: border-box;
}
.event-wrap {
  margin: 120rpx 0;
}
/* 布局相关 */
.por {
  position: relative;
}
.pofTop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
}
.pofBottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
}
.diy-bar {
  position: fixed;
  top: 0;
  left:0;
  padding-top: 160rpx;
  width: 100vw;
  z-index: 2333;
}
.diy-bar.sm {
  padding-top: 52rpx;
}
.event-wrap.sm {
  margin: 14rpx 0 120rpx;
}